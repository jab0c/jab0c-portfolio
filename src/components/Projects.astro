---
import SectionShell from "./SectionShell.astro";
import ProjectCard from "./ProjectCard.astro";
import { projects } from "../data/content";
import { site } from "../data/site";
---

<SectionShell id="projects">
    <div class="flex flex-wrap items-end justify-between gap-4">
        <div>
            <h2 class="text-2xl font-bold">Featured projects</h2>
            <p class="mt-2 text-sm text-[color:var(--muted)]">A few things I’ve built — each with a clear purpose.</p>
        </div>
        <a
                class="text-sm text-[color:var(--muted)] hover:text-white transition"
                href={site.links.github}
                target="_blank"
                rel="noreferrer"
        >
            More on GitHub ↗
        </a>
    </div>

    <div class="mt-6 grid gap-4 md:grid-cols-3">
        {projects.map((p) => <ProjectCard p={p} />)}
    </div>
</SectionShell>
