---
import SectionHeader from "./SectionHeader.astro";
import { services } from "../data/content";
import SectionShell from "./SectionShell.astro";
---
<SectionShell id="services" class="mx-auto max-w-6xl px-4 pt-14">
    <SectionHeader title="Services" subtitle="What I can help with (straight to the point)." />

    <div class="space-y-3">
        {services.map((s) => (
                <details open class="group rounded-2xl border border-[color:var(--border)] bg-[color:var(--card2)] p-5">
                    <summary class="flex cursor-pointer list-none items-center justify-between">
                        <div class="flex items-center gap-3">
                            <span class="text-sm text-[color:var(--accent)]">{s.n}</span>
                            <span class="font-semibold">{s.title}</span>
                        </div>
                        <span class="text-[color:var(--muted)] group-open:rotate-45 transition">+</span>
                    </summary>
                    <p class="mt-3 text-sm text-[color:var(--muted)]">{s.desc}</p>
                </details>
        ))}
    </div>
</SectionShell>
