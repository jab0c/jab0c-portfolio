---
import { site } from "../data/site";
---
<header class="sticky top-0 z-50">
    <div class="mx-auto max-w-6xl px-4">
        <div class="mt-4 rounded-2xl border border-[color:var(--border)] bg-[color:var(--card2)] backdrop-blur-xl">
            <div class="flex items-center justify-between px-4 py-3">
                <a href="/" class="flex items-center gap-2">
          <span class="grid h-9 w-9 place-items-center rounded-xl bg-[color:var(--card)] border border-[color:var(--border)]">
            <span class="font-semibold">J</span>
          </span>
                    <div class="leading-tight">
                        <div class="text-sm font-semibold">{site.name}</div>
                        <div class="text-xs text-[color:var(--muted)]">{site.role}</div>
                    </div>
                </a>

                <nav class="hidden md:flex items-center gap-6 text-sm text-[color:var(--muted)]">
                    <a class="hover:text-white" href="#projects">Projects</a>
                    <a class="hover:text-white" href="#services">Services</a>
                    <a class="hover:text-white" href="#experience">Experience</a>
                    <a class="hover:text-white" href="#skills">Skills</a>
                    <a class="hover:text-white" href="#contact">Contact</a>
                </nav>

                <div class="flex items-center gap-2">
                    <a class="hidden sm:inline rounded-xl border border-[color:var(--border)] bg-[color:var(--card)] px-4 py-2 text-sm hover:bg-white/10 transition"
                       href={site.links.cv} target="_blank" rel="noreferrer">
                        CV
                    </a>
                    <a class="rounded-xl bg-[color:var(--accent)]/90 hover:bg-[color:var(--accent)] px-4 py-2 text-sm font-semibold text-black transition"
                       href={site.links.call} target="_blank" rel="noreferrer">
                        Book a call
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>
