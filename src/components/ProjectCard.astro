---
const { p } = Astro.props;
const cardClasses = `group block rounded-2xl border border-[color:var(--border)] bg-[color:var(--card2)] overflow-hidden transition ${
    p.disabled ? "cursor-not-allowed opacity-75" : "hover:bg-white/5"
}`;
---
{p.disabled ? (
        <div class={cardClasses} aria-disabled="true">
            <div class="aspect-[16/10] bg-gradient-to-br from-white/10 to-transparent p-4">
                <div class="flex h-full w-full items-center justify-center rounded-xl border border-white/10 bg-black/30">
                    <div class="flex h-1/2 w-1/2 items-center justify-center">
                        {p.icon?.kind === "emoji" ? (
                                <span class="text-[clamp(1.75rem,4vw,3rem)] leading-none" role="img" aria-label={p.icon.label}>
                  {p.icon.value}
                </span>
                        ) : null}

                        {p.icon?.kind === "image" ? (
                                <img
                                        src={p.icon.src}
                                        alt={p.icon.label}
                                        class="h-full w-full object-contain"
                                        loading="lazy"
                                />
                        ) : null}

                        {p.icon?.kind === "unity" ? (
                                <span
                                        class="text-[clamp(1.25rem,3.2vw,2.5rem)] font-black tracking-[0.2em] leading-none text-white/85"
                                        aria-label={p.icon.label}
                                >
                  UNITY
                </span>
                        ) : null}
                    </div>
                </div>
            </div>

            <div class="p-5">
                <div class="flex items-start justify-between gap-4">
                    <div>
                        <h3 class="font-semibold">{p.title}</h3>
                        {p.status ? (
                                <div class="mt-2 inline-flex rounded-full border border-white/10 bg-white/5 px-2.5 py-1 text-[11px] font-semibold tracking-wide text-[color:var(--muted)]">
                                    {p.status}
                                </div>
                        ) : null}
                    </div>
                </div>
                <p class="mt-3 text-sm text-[color:var(--muted)]">{p.desc}</p>
                <div class="mt-4 flex flex-wrap gap-2">
                    {p.tags.map((t) => (
                            <span class="rounded-full border border-white/10 bg-white/5 px-2.5 py-1 text-xs text-[color:var(--muted)]">
              {t}
            </span>
                    ))}
                </div>
            </div>
        </div>
) : (
        <a
                href={p.href}
                target="_blank"
                rel="noreferrer"
                class={cardClasses}
        >
    <div class="aspect-[16/10] bg-gradient-to-br from-white/10 to-transparent p-4">
        <div class="flex h-full w-full items-center justify-center rounded-xl border border-white/10 bg-black/30">
            <div class="flex h-1/2 w-1/2 items-center justify-center">
                {p.icon?.kind === "emoji" ? (
                        <span class="text-[clamp(1.75rem,4vw,3rem)] leading-none" role="img" aria-label={p.icon.label}>
              {p.icon.value}
            </span>
                ) : null}

                {p.icon?.kind === "image" ? (
                        <img
                                src={p.icon.src}
                                alt={p.icon.label}
                                class="h-full w-full object-contain"
                                loading="lazy"
                        />
                ) : null}

                {p.icon?.kind === "unity" ? (
                        <span
                                class="text-[clamp(1.25rem,3.2vw,2.5rem)] font-black tracking-[0.2em] leading-none text-white/85"
                                aria-label={p.icon.label}
                        >
              UNITY
            </span>
                ) : null}
            </div>
        </div>
    </div>

    <div class="p-5">
        <div class="flex items-start justify-between gap-4">
            <h3 class="font-semibold group-hover:text-[color:var(--accent)] transition">{p.title}</h3>
            <span class="text-[color:var(--muted)]">â†—</span>
        </div>
        <p class="mt-2 text-sm text-[color:var(--muted)]">{p.desc}</p>
        <div class="mt-4 flex flex-wrap gap-2">
            {p.tags.map((t) => (
                    <span class="rounded-full border border-white/10 bg-white/5 px-2.5 py-1 text-xs text-[color:var(--muted)]">
          {t}
        </span>
            ))}
        </div>
    </div>
</a>
)}
